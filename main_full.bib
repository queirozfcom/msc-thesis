  keywords = {face recognition;learning (artificial intelligence);distance function;distance metric learning;face recognition;face verification;similarity learning;Cybernetics;Face;Face recognition;Learning systems;Measurement;Protocols;Taxonomy;Dimensionality reduction;distance metric learning;face recognition;face verification;similarity learning},
