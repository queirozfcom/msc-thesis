@Article{menezes_etal_2010,
  author        = {Menezes, G.V. and Almeida, J.M. and Belém, F. and Gonçalves, M.A. and Lacerda, A. and De Moura, E.S. and Pappa, G.L. and Veloso, A. and Ziviani, N.},
  title         = {Demand-driven tag recommendation},
  journal       = {Lecture Notes in Computer Science (including subseries Lecture Notes in Artificial Intelligence and Lecture Notes in Bioinformatics)},
